<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LecturerController</servlet-name>
        <servlet-class>controller.LecturerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimeTableController</servlet-name>
        <servlet-class>controller.TimeTableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttendanceTakingController</servlet-name>
        <servlet-class>controller.AttendanceTakingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <jsp-file>/view/Home.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AttendanceReport</servlet-name>
        <servlet-class>controller.AttendanceReport</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListGroupController</servlet-name>
        <servlet-class>controller.ListGroupController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LecturerController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimeTableController</servlet-name>
        <url-pattern>/view/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendanceTakingController</servlet-name>
        <url-pattern>/view/attendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/view/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendanceReport</servlet-name>
        <url-pattern>/view/report</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListGroupController</servlet-name>
        <url-pattern>/view/listgroup</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
